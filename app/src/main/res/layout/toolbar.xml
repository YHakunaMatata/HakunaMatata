<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:elastic="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mytoolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:minHeight="?attr/actionBarSize"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <FrameLayout
        android:id="@+id/elastic_download_view_container"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:visibility="gone">

        <is.arontibo.library.ElasticDownloadView
            android:id="@+id/elastic_download_view"
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:layout_marginTop="-140dp"
            android:layout_alignParentTop="true"
            android:alpha="1"
            elastic:backgroundColor="@color/orange3"
            elastic:vc_tintMode="src_atop" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="34dp"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_hakuna"
            android:scaleType="centerCrop"
            android:visibility="visible" />
    </LinearLayout>

</android.support.v7.widget.Toolbar>