<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar android:id="@+id/mytoolbar"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="?attr/colorPrimary" android:minHeight="?attr/actionBarSize" />

    <fragment android:id="@+id/rps_fragment" android:name="com.example.rps.RpsFragment"
        android:layout_width="match_parent" android:layout_height="match_parent" />
    <fragment android:id="@+id/settings_fragment"
        android:name="com.example.rps.usersettings.UserSettingsFragment"
        android:layout_width="match_parent" android:layout_height="match_parent" />
    <fragment android:id="@+id/content_fragment" android:name="com.example.rps.ContentFragment"
        android:layout_width="match_parent" android:layout_height="match_parent" />

</LinearLayout>

